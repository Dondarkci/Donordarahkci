
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'ronymunich@gmail.com' ||
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Event Slots (Kuota Lokasi): Public read, Admin write
    match /eventSlots/{slotId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User Registrations: Owner read/write, Admin read/write
    match /users/{userId}/registrations/{registrationId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    // Support collectionGroup queries for the Admin Dashboard
    match /{path=**}/registrations/{registrationId} {
      allow list: if isAdmin();
    }

    // Admin Roles
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
