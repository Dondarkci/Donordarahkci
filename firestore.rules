
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Event Slots (Kuota Lokasi): Public read, any signed-in user can write (seed/edit) for prototype
    match /eventSlots/{slotId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // User Registrations: Owner read/write, any signed-in user can read/write for prototype dashboard
    match /users/{userId}/registrations/{registrationId} {
      allow read, write: if isOwner(userId) || isSignedIn();
    }
    
    // Support collectionGroup queries for the Admin Dashboard
    // Dilonggarkan ke isSignedIn agar dashboard prototype dapat menampilkan data
    match /{path=**}/registrations/{registrationId} {
      allow list: if isSignedIn();
    }

    // Admin Roles
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
